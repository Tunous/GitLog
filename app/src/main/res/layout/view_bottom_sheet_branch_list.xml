<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/branchListBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="16dp"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/bottom_sheet_peek_height"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:showIn="@layout/fragment_commit_log">

    <TextView
        android:id="@+id/branchListBottomSheetHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="@dimen/bottom_sheet_peek_height"
        android:background="?colorPrimary"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_branch"
        android:drawableTint="?android:textColorPrimary"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:paddingEnd="56dp"
        android:paddingStart="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:text="master" />

    <Spinner
        android:id="@+id/branchFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/branchListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:colorBackground" />

</LinearLayout>