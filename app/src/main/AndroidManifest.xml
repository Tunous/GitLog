<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.thanel.gitlog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GitLogApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".repositorylist.RepositoryListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".repository.RepositoryActivity" />
        <activity android:name=".commit.CommitActivity" />
        <activity android:name=".AddRepositoryActivity" />
        <activity android:name=".diff.DiffViewerActivity" />
        <activity android:name=".file.FileViewerActivity" />
        <activity android:name=".repository.filelist.FileListActivity" />
    </application>

</manifest>