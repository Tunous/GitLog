<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.thanel.gitlog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GitLogApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".repositorylist.RepositoryListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".repository.RepositoryActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".repositorylist.RepositoryListActivity" />
        <activity
            android:name=".commit.CommitActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".repository.RepositoryActivity" />
        <activity
            android:name=".AddRepositoryActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".repositorylist.RepositoryListActivity" />
        <activity
            android:name=".diff.DiffActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".commit.CommitActivity" />
        <activity android:name=".file.FileActivity"></activity>
    </application>

</manifest>